# Colorize
alias ls="ls -lA -h --group-directories-first --color=auto"
alias diff="diff --color=auto"
alias grep="grep --color=auto"

# Shortcuts
alias q="exit"
alias s="sudo"
alias ll="ls"
alias ka="killall"
alias gt="gotop"
alias fetch="neofetch"

# Packages
alias paci="paru -S --needed --noconfirm"
alias pacu="paru -Syyu --noconfirm"
alias pacrm="sudo pacman -Rns"
alias pacrmo='pacman -Qtdq > /dev/null && echo "Packages found..." && sudo pacman -Rs $(pacman -Qtdq) || echo "Nothing to clear..."'
alias pacs="paru -Ss"
alias pacls="pacman -Qe"

# Dotfiles
alias dotu='dots status && dots commit -am "auto_commit_update" && dots push'

# Git
alias gs="git status"
alias gu="git pull"
alias gp="git push"
alias gc="git commit -am"
alias ga="git add ."
